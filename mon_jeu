import pygame
import random

# Initialisation de Pygame
pygame.init()

# ðŸ“Œ FenÃªtre
WIDTH, HEIGHT = 800, 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Jeu Pygame - Ã‰vite les ennemis")

# ðŸ“Œ Couleurs
WHITE = (255, 255, 255)
BLUE = (0, 100, 255)
RED = (255, 0, 0)
BLACK = (0, 0, 0)

# ðŸ“Œ Joueur
player_size = 50
player_x = WIDTH // 2
player_y = HEIGHT - 80
player_speed = 6

# ðŸ“Œ Ennemis
enemy_size = 50
enemies = []

def create_enemy(speed):
    """CrÃ©e un ennemi avec une vitesse donnÃ©e"""
    return {
        "x": random.randint(0, WIDTH - enemy_size),
        "y": -enemy_size,
        "speed": speed,
        "size": enemy_size
    }

# ðŸ”¥ Commencer avec plusieurs ennemis rapides
initial_speeds = [6, 7, 8]  # vitesse initiale des ennemis
for speed in initial_speeds:
    enemies.append(create_enemy(speed))

# ðŸ“Œ Score
score = 0
font = pygame.font.SysFont(None, 40)

clock = pygame.time.Clock()
running = True

def show_score(value):
    """Affiche le score Ã  l'Ã©cran"""
    text = font.render(f"Score : {value}", True, BLACK)
    screen.blit(text, (10, 10))

def game_over():
    """Affiche GAME OVER"""
    text = font.render("GAME OVER", True, RED)
    screen.blit(text, (WIDTH // 2 - 100, HEIGHT // 2))
    pygame.display.update()
    pygame.time.delay(2000)

# ðŸ“Œ Boucle principale
while running:
    clock.tick(60)
    screen.fill(WHITE)

    # Gestion des Ã©vÃ©nements
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # ðŸ”¹ DÃ©placement joueur
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and player_x > 0:
        player_x -= player_speed
    if keys[pygame.K_RIGHT] and player_x < WIDTH - player_size:
        player_x += player_speed
    if keys[pygame.K_UP] and player_y > 0:
        player_y -= player_speed
    if keys[pygame.K_DOWN] and player_y < HEIGHT - player_size:
        player_y += player_speed

    player_rect = pygame.Rect(player_x, player_y, player_size, player_size)

    # ðŸ”¹ Gestion des ennemis
    for enemy in enemies:
        enemy["y"] += enemy["speed"]  # avancer l'ennemi

        # RÃ©apparition en haut et augmentation du score
        if enemy["y"] > HEIGHT:
            enemy["y"] = -enemy_size
            enemy["x"] = random.randint(0, WIDTH - enemy_size)
            score += 1
            enemy["speed"] += 0.2  # le jeu devient progressivement plus rapide

        enemy_rect = pygame.Rect(enemy["x"], enemy["y"], enemy["size"], enemy["size"])

        # Collision avec le joueur
        if player_rect.colliderect(enemy_rect):
            game_over()
            running = False

        pygame.draw.rect(screen, RED, enemy_rect)

    # ðŸ”¹ Dessin joueur et score
    pygame.draw.rect(screen, BLUE, player_rect)
    show_score(score)

    pygame.display.update()

pygame.quit()
